    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:orientation="vertical"
        android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        app:fontFamily="@font/circularbold"
        android:text="Speed Scramble"
        android:textColor="@color/darkGrey"
        android:layout_marginTop="-50dp"/>

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_normal"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:text="Easy"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="20sp"
        app:fontFamily="@font/circularbold"
        android:layout_marginTop="60dp"
        android:onClick="startClicked"/>

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_normal"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:text="Medium"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="20sp"
        app:fontFamily="@font/circularbold"
        android:layout_marginTop="15dp"
        android:onClick="startClicked"/>

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_normal"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:text="Hard"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="20sp"
        app:fontFamily="@font/circularbold"
        android:layout_marginTop="15dp"
        android:onClick="startClicked"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="25dp">

        <ImageButton
            android:layout_width="60dp"
            android:layout_height="45dp"
            android:background="@drawable/button_normal"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:src="@drawable/highscore"
            android:scaleType="fitCenter"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textSize="20sp"
            app:fontFamily="@font/circularbold"
            android:layout_marginTop="15dp"
            android:onClick="highScoreClicked"
            android:layout_marginRight="15dp" />

        <ImageButton
            android:layout_width="60dp"
            android:layout_height="45dp"
            android:background="@drawable/button_normal"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:src="@drawable/heart_full"
            android:scaleType="fitCenter"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textSize="20sp"
            app:fontFamily="@font/circularbold"
            android:layout_marginTop="15dp"
            android:onClick="favouriteClicked"
            android:layout_marginRight="15dp"/>

        <ImageButton
            android:layout_width="60dp"
            android:layout_height="45dp"
            android:background="@drawable/button_normal"
            android:paddingLeft="14dp"
            android:paddingRight="14dp"
            android:src="@drawable/info"
            android:scaleType="fitCenter"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textSize="20sp"
            app:fontFamily="@font/circularbold"
            android:layout_marginTop="15dp"
            android:onClick="infoClicked" />

    </LinearLayout>

</LinearLayout>

</LinearLayout>