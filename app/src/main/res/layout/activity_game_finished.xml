<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.GameFinishedActivity"
    android:orientation="vertical"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:id="@+id/gameWonLayout">

        <TextView
            android:id="@+id/congratulationsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40sp"
            app:fontFamily="@font/circularbold"
            android:text="Congratulations!"
            android:textColor="@color/darkGrey"/>

        <TextView
            android:id="@+id/congratulationsDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            app:fontFamily="@font/circularbold"
            android:text="You are a typing champion"
            android:textColor="@color/darkGrey"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_normal"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:text="Home"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textSize="20sp"
            app:fontFamily="@font/circularbold"
            android:layout_marginTop="60dp"
            android:onClick="homeClicked"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_normal"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:text="Replay"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textSize="20sp"
            app:fontFamily="@font/circularbold"
            android:layout_marginTop="25dp"
            android:onClick="replayClicked"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:id="@+id/gameLostLayout"
        android:background="@color/red">

        <TextView
            android:id="@+id/gameOverText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40sp"
            app:fontFamily="@font/circularbold"
            android:text="Game Over"
            android:textColor="@color/darkGrey"/>

        <TextView
            android:id="@+id/gameOverDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            app:fontFamily="@font/circularbold"
            android:text="Better luck next time"
            android:textColor="@color/darkGrey"/>

        <Button
            android:id="@+id/homeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_normal"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:text="Home"
            android:onClick="homeClicked"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textSize="20sp"
            app:fontFamily="@font/circularbold"
            android:layout_marginTop="60dp"/>

        <Button
            android:id="@+id/replayButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_normal"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:text="Replay"
            android:onClick="replayClicked"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textSize="20sp"
            app:fontFamily="@font/circularbold"
            android:layout_marginTop="25dp"/>
    </LinearLayout>


</LinearLayout>